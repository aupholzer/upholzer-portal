{
  "name": "reactscratch",
  "version": "1.0.0",
  "description": "Awesome React Starter Kit that can scale for an enterprise application with the very easy maintainable codebase.",
  "main": "index.jsx",
  "scripts": {
    "test": "jest",
    "start-dev": "better-npm-run start-dev",
    "build-dev": "better-npm-run build-dev",
    "build-prod": "better-npm-run build-prod",
    "build-analyze": "better-npm-run build-dev-analyze",
    "eslint": "eslint --config ./.eslintrc --ext .js,jsx ./src --fix",
    "storybook": "start-storybook",
    "prettify": "prettier  --config ./.prettierrc --ext .js,jsx,.scss ./src --write",
    "stylelint": "stylelint  --config ./.stylelintrc --aei .scss ./src",
    "build-dev-ssr": "npm run build-dev && better-npm-run build-dev-ssr",
    "build-prod-ssr": "npm run build-prod && better-npm-run build-prod-ssr",
    "start-dev-ssr": "npm run build-dev-ssr && node ./server-build/server.js --inspect",
    "start-prod-ssr": "npm run build-prod-ssr && node ./server-build/server.js"
  },
  "betterScripts": {
    "build-dev-ssr": {
      "command": "webpack --progress --config ./webpack/server/webpack.dev.config.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "build-prod-ssr": {
      "command": "webpack --progress --config ./webpack/server/webpack.prod.config.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      }
    },
    "build-dev": {
      "command": "webpack --progress --config ./webpack/client/webpack.dev.config.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "build-dev-analyze": {
      "command": "webpack -w --progress --config ./webpack/client/webpack.dev.config.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000,
        "analyze": true
      }
    },
    "build-prod": {
      "command": "webpack --progress --config ./webpack/client/webpack.prod.config.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "webpack-dev-server --config ./webpack/client/webpack.dev.config.js --open",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    }
  },
  "keywords": [
    "react",
    "javascript",
    "webpack",
    "babel",
    "jsx",
    "html",
    "css",
    "tailwind",
    "server side rendering",
    "eslint",
    "storybook",
    "redux",
    "saga"
  ],
  
  "dependencies": {
    "@babel/core": "latest",
    "@babel/node": "latest",
    "@storybook/react": "latest",
    "axios": "latest",
    "eslint-plugin-prettier": "latest",
    "prop-types": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-redux": "latest",
    "react-router-dom": "latest",
    "redux": "latest",
    "redux-devtools-extension": "latest",
    "redux-saga": "latest"
  },
  "devDependencies": {
    "@babel/polyfill": "^latest",
    "@babel/preset-env": "latest",
    "@babel/preset-react": "latest",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "autoprefixer": "latest",
    "babel-eslint": "latest",
    "babel-jest": "latest",
    "babel-loader": "latest",
    "better-npm-run": "latest",
    "clean-webpack-plugin": "latest",
    "compression-webpack-plugin": "latest",
    "copy-webpack-plugin": "latest",
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "extract-css-chunks-webpack-plugin": "latest",
    "file-loader": "^latest",
    "html-webpack-plugin": "latest",
    "husky": "latest",
    "identity-obj-proxy": "latest",
    "ignore-styles": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "nodemon": "latest",
    "optimize-css-assets-webpack-plugin": "latest",
    "postcss-loader": "latest",
    "prettier": "latest",
    "react-test-renderer": "latest",
    "sass": "latest",
    "sass-loader": "latest",
    "stylelint": "latest",
    "stylelint-webpack-plugin": "latest",
    "webpack": "latest",
    "webpack-bundle-analyzer": "latest",
    "webpack-cli": "latest",
    "webpack-dev-server": "latest",
    "webpack-manifest-plugin": "latest",
    "webpack-merge": "latest",
    "workbox-precaching": "latest",
    "workbox-webpack-plugin": "latest",
    "webpack-node-externals": "latest"
  },
  "lint-staged": {
    "*.{js,jsx}": "npm run eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build-prod"
    }
  }
}
